# API Gateway Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# Microservices URLs
AUTH_SERVICE_URL=http://localhost:3001
PROFILE_SERVICE_URL=http://localhost:3002
CHATBOT_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
MEAL_PLANNER_SERVICE_URL=http://localhost:3007
APPOINTMENT_SERVICE_URL=http://localhost:3006

# Database (if needed for gateway operations)
DATABASE_URL="postgresql://postgres:secretpassword@localhost:5432/postgres"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
